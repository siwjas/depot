<%= turbo_frame_tag(dom_id(product)) do %>
  <li class='flex mb-6'>
    <%= image_tag(product.image_url,
      class: 'object-contain w-40 h-48 rounded-lg shadow-md mr-6') %>

    <div>
      <h2 class="font-bold text-lg mb-3"><%= link_to product.title, product, data: { turbo: false } %></h2>

      <p>
        <%= truncate(strip_tags(product.description), length: 80) %>
      </p>

      <div class="mt-3">
        <%= number_to_currency(product.price) %>

        <%= button_to 'Add to cart', line_items_path(product_id: product),
            class: 'inline-block px-3 py-2 text-sm font-medium text-center text-white bg-green-600 
            rounded-lg hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 
            dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800' %>
      </div>
    </div>
  </li>
<% end %>